<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Play Video</title>
</head>
<body>
  <h2>Video from JSON</h2>
  <video id="myVideo" width="600" controls></video>

  <script>
    // ده جزء من JSON بتاعك
    const jsonData = {
      "sources": [
        {
          "file": "/c/Users/negmm/Downloads/EP9523qVlm6Y1jArw7.mp4"
        }
      ]
    };

    // جبنا الفيديو من JSON
    const videoPath = jsonData.sources[0].file;

    // ضفناه للـ video tag
    document.getElementById("myVideo").src = videoPath;
  </script>
</body>
</html>
